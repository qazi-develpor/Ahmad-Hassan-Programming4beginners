#include <stdio.h>

int main() {
    int n;
    if (scanf("%d", &n) != 1) return 0;
    int size = 2 * n - 1;
    for (int i = 0; i < size; ++i) {
        for (int j = 0; j < size; ++j) {
            int d1 = i, d2 = j, d3 = size - 1 - i, d4 = size - 1 - j;
            int d = d1;
            if (d2 < d) d = d2;
            if (d3 < d) d = d3;
            if (d4 < d) d = d4;
            int val = n - d;
            printf("%d", val);
            if (j != size - 1) printf(" ");
        }
        printf("\n");
    }
    return 0;
}
